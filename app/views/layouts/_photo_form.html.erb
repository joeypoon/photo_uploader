<div class="row">

  <div class="col-md-6 col-md-offset-3" style='margin-top: 15%;'>

    <%= simple_form_for @photo do |f| %>

      <%= f.input_field :name, class: 'form-group' %>
      <%= f.input_field :tag_list, placeholder: 'Tags: separate by commas', class: 'form-control form-group' %>
      <%= f.submit 'Upload', class: 'btn btn-primary' %>

    <% end %>

  </div>

</div>
