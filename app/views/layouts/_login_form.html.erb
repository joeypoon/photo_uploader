<%= form_tag login_path, method: :post do %>

  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control"  %>
  </div>

  <div>
    <%= submit_tag "Sign in", class: "btn btn-primary" %>
  </div>

<% end %>
